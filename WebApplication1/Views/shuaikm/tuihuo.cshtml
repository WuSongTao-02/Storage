<script>

    var PageIndex = 1;
    var PageSize = 3;
    var PageCount = 0;
    var rows = 0;
    $(function () {
        GetRows();
        PageList(PageIndex, PageSize);

    });
    function time(m) {
        var dd = new Date(parseInt(m.substr(6)));
        return dd.toLocaleDateString();
    }
    function PageList(pindex, psize) {
  
        $.ajax({
            type: "post",
            url: "/shuaikm/TuiHuochaxun",
            data: "{PageIndex:" + pindex + ",PageSize:" + psize + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (res) {
                $("#tab tr").remove();
                $.each(res.DataList, function (index, data) {
                    $("#tab").append("<tr><td>" + data.CobId + "</td><td>" + data.DeliId + "</td><td>" + data.CobType + "</td><td>" + data.IsDelete + "</td><td>" + data.CobPerson + "</td><td>" + time(data.CreateTime) + "</td><td><a onclick='return edit(" + data.CobId + ")'>删除</a></td></tr>");

                });
            }
        });
    }
    function GetRows() {
        $.ajax({
            type: "POST",
            url: "/shuaikm/GetRows2",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                //获取总条数
                rows = result;
                layui.use(['laypage', 'layer'], function () {
                    var laypage = layui.laypage
                        , layer = layui.layer;
                    //完整功能
                    laypage.render({
                        elem: 'zwb'
                        //设置总条数
                        , count: rows
                        , limit: 4
                        , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                        , jump: function (obj, first) {
                            if (!first) {
                                //调用我们自己分页的方法
                                //obj.curr 当前页码
                                //obj.limit 每页显示条数
                                PageList(obj.curr, obj.limit);
                            }
                            console.log(obj)
                        }
                    });

                });

            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });

    }

    function edit(id) {

        if (confirm('确定删除?')) {
            $.ajax({
                type: "POST",
                url: "/shuaikm/Tuihuoedit",
                data: "{id:" + id + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (res) {
                    if (res > 0) {
                        alert("删除成功");
                        PageList(PageIndex, PageSize);
                    }
                    else {
                        alert("删除失败");
                    }
                },
                error: function (ex) {
                    alert("Error:" + ex.responseText);
                }
            });
        }
        return false;
    }

