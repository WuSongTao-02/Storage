<script>
    var pageIndex = 1;
    var pageSize = 10;
    var pageCount = 0;
    var rows = 0;
    $(function () {
        GetRows();
        PageList(pageIndex, pageSize);
        $('#tian').click(function () {
            $('.xdiv').show();
            $('.xdiv').css('box-shadow', '0 0 30px #d2d2d2');
        });
        $('#GBButton').click(function () {
            $('.xdiv').hide();
        });
    });

    $("#queryByName").click(function () {
        //判断文本框是否为空
        if ($("#username").val() == "") {
            GetAll();
            return;
        }
        else if ($("#username").val() != "") {
            $.ajax({
                type: "post",
                url: "/LiuMin/ShowByName1",
                data: "{VenId:'" + $("#username").val() + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    console.log(result);
                    $("#bot tr").remove();
                    $.each(result, function (index, data) {
                        $("#bot").append("<tr><td><input type='checkbox' name='' lay-skin='primary'></td><td>" + data.VenId + "</td><td>" + data.VenType + "</td><td>" + data.VenName
                            + "</td><td>" + data.VenTel + "</td><td>" + data.VenEmain + "</td><td>" + data.VenPerson + "</td><td>"
                            + data.VenAddress + "</td><td>" + data.Remake + "</td><td><a class=''>编辑</a><a>删除</a></td></tr>")
                    })
                },
                error: function (ex) {
                    alert("Error" + ex.responseText);
                }
            });
        }
    });
    function PageList(pindex, psize) {
        $.ajax({
            type: "post",//请求类型
            url: "/LiuMin/PageListDemo",
            data: "{pageIndex:" + pindex + ",pageSize:" + psize + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (rdata) {
                console.log(rdata);
                $("#bot tr").remove();
                $.each(rdata.DataList, function (index, data) {
                    if (data.IsDelete > 0) {
                        $("#bot").append("<tr><td>" + data.VenId + "</td><td>" + data.VenType + "</td><td>" + data.VenName
                            + "</td><td>" + data.VenTel + "</td><td>" + data.VenEmain + "</td><td>" + data.VenPerson + "</td><td>"
                            + data.VenAddress + "</td><td>" + data.IsDelete + "</td><td>" + data.Remake + "</td><td><button class='layui-btn'>修改</button><button onclick='return VendorDele(" + data.VenId + ")' class='layui-btn'>删除</button></td></tr>")
                    }
                })
            },
            error: function (xrh) {
                alert(xrh.responseText);
            }
        });
    }
    function GetRows() {
        $.ajax({
            type: "POST",
            url: "/LiuMin/GetRows",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                //获取总条数
                rows = result;
                layui.use(['laypage', 'layer'], function () {
                    var laypage = layui.laypage
                        , layer = layui.layer;
                    //完整功能
                    laypage.render({
                        elem: 'demo4'
                        //设置总条数
                        , count: rows
                        , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                        , jump: function (obj, first) {
                            if (!first) {
                                //调用我们自己分页的方法
                                //obj.curr 当前页码
                                //obj.limit 每页显示条数
                                PageList(obj.curr, obj.limit);
                            }
                            console.log(obj)
                        }
                    });
                });
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }
    //添加供应商
    function VendorAdd() {
        $.ajax({
            type: "post",
            url: "/LiuMin/VendorAdd",
            data: "{ven:{VenType:'" + $("#LocationNum").val() + "',VenName:'" + $("#LocationName").val()
                + "',VenTel:'" + $("#LocationTel").val() + "',VenEmain:'" + $("#LocationEmail").val()
                + "',VenPerson:'" + $("#LocationLxr").val() + "',VenAddress:'" + $("#LocationDress").val()
                + "',IsDelete:'" + $("#LocationDel").val() + "',Remake:'" + $("LocationBz").val() + "'}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功");
                    PageList(pageIndex, pageSize);
                } else {
                    alert("新增失败");
                }
            }, error: function (ex) {
                alert(ex.responseText);
            }
        });
    }
    //删除供应商
    function VendorDele(id) {
        alert("1111");
        if (confirm('确定删除?')) {
            $.ajax({
                type: "post",//请求类型
                url: "/LiuMin/VendorDele",
                data: "{id:" + id + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (rdata) {
                    if (rdata > 0) {
                        alert("删除成功！");
                        PageList(pageIndex, pageSize);
                    }
                    else {
                        alert("删除失败！");
                    }
                },
                error: function (xrh) {
                    alert(xrh.responseText);
                }
            });
        }
        return false;
    }
</script>

