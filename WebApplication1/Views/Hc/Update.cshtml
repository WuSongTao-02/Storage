
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link rel="stylesheet" href="~/X-admin/css/font.css">
    <link rel="stylesheet" href="~/X-admin/css/xadmin.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-row">
            <form class="layui-form">
                <div class="layui-form-item">
                    <label for="L_username" class="layui-form-label">
                        <span class="x-red">*</span>角色名

                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="name" name="name" required="" lay-verify="nikename" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label for="L_repass" class="layui-form-label"></label>
                    <button id="Submit1" class="layui-btn" lay-filter="add" lay-submit="" onclick="Save(id)">确认</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
<script type="text/javascript" src="~/X-admin/lib/layui/layui.js" charset="utf-8"></script>
<script type="text/javascript" src="~/X-admin/js/xadmin.js"></script>
<script>

    var id = 0;
    $(function () {
        id =@Request.QueryString["id"];
        GetById(id);

    });
    function GetById(id) {
        $.ajax({
            type: "POST",
            url: "/Hc/GetById",
            data: "{id:"+id+"}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#name").val(result[0].RoleName);

            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });

    }
    $("#Submit1").click(function () {
        $.ajax({
            type: "POST",
            url: "/Hc/Edit",
            data: "{r:{RoleId:" + id + ",RoleName:'" + $("#name").val() + "'}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    // location.href = '/DemoAJAX/Index';
                } else {
                    alert("修改失败");
                }

            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    });



    layui.use(['form', 'layer', 'jquery'],
        function () {
            $ = layui.jquery;
            var form = layui.form,
                layer = layui.layer;
            //自定义验证规则
            form.verify({
                nikename: function (value) {
                    if (value.length < 2) {
                        return '角色名称至少得2个字符啊';
                    }
                },
            });
            //监听提交
            form.on('submit(add)',
                function (data) {
                    console.log(data);
                    layer.alert("修改成功", {
                        //发异步，把数据提交给php
                        icon: 1
                    },
                        function () {
                            //关闭当前frame
                            xadmin.close();
                            // 可以对父窗口进行刷新
                            xadmin.father_reload();
                        });
                    return false;
                });
        });
</script>
